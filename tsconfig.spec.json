/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "types": ["jest", "node"],
    "allowJs": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "outDir": "./out-tsc/spec",
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "avid-ui-lib": [
        "./node_modules/avid-ui-lib/avid-ui-lib"
      ],
      "core-js/es7/reflect": [
        "./node_modules/core-js/proposals/reflect-metadata"
      ],
      "core-js/es6/*": [
        "./node_modules/core-js/es/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@services/*": [
        "src/app/core/services/*"
      ],
      "@interfaces/*": [
        "src/app/core/interfaces/*"
      ],
      "@constants/*": [
        "src/app/core/constants/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@environments/*": [
        "src/environments/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ]
    }
  },
  "files": [
    "setup.jest.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
